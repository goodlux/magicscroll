# MagicScroll Configuration
# Copy this to .env and customize as needed

# Data directory (default: ~/.magicscroll)
MAGICSCROLL_DATA_DIR=/Users/rob/.magicscroll

# Database paths (optional - will use data_dir if not specified)
# MAGICSCROLL_SQLITE_PATH=/Users/rob/.magicscroll/sqlite/magicscroll-sqlite.db
# MAGICSCROLL_MILVUS_PATH=/Users/rob/.magicscroll/milvus
# MAGICSCROLL_OXIGRAPH_PATH=/Users/rob/.magicscroll/oxigraph
# MAGICSCROLL_PIXELTABLE_PATH=/Users/rob/.magicscroll/pixeltable

# API settings
MAGICSCROLL_HOST=127.0.0.1
MAGICSCROLL_PORT=8000
MAGICSCROLL_DEBUG=false

# Pixeltable Configuration
PIXELTABLE_HOME=/Users/rob/.magicscroll/pixeltable
PIXELTABLE_FILE_CACHE_SIZE_G=1
PIXELTABLE_LOG_LEVEL=INFO
PIXELTABLE_MAX_WORKERS=4
PIXELTABLE_ENABLE_ANALYTICS=false
PIXELTABLE_ENABLE_TELEMETRY=false
